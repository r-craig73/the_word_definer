<h2><%= @description %></h2>

<form action="/output" method="post">
  <div class="form-group">
    <label for="word">What is your word?</label>
    <input type="word" name="word" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="definition">What does the word mean?</label>
    <input type="definition" name="definition" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-primary">Add!</button>
</form>
